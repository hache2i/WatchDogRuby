<style>
	#sortable { list-style-type: none; margin: 0; padding: 0; width: 60%; }
	#sortable li { margin: 0 3px 3px 3px; padding: 0.4em; padding-left: 1.5em; font-size: 1.4em; height: 18px; }
	#sortable li span { position: absolute; margin-left: -1.3em; }
</style>

<script>
	$(function() {
		$("#sortable").sortable();
	});
</script>

<ul id="sortable">
	<% @notes.each do |note| %>
		<li class="ui-state-default" id="<%= note.getId() %>"><%= note.getTitle() %></li>
	<% end %>
</ul>
<div style='display:none'>
	<form method='POST' action='/generate' name='arrange-form' id='arrange-form'>
	  <fieldset>
	    <input placeholder="Insert Url" name='publicUrl' id='publicUrl' value='<%= @publicUrl %>'/>
	    <input name='sortedIdsStr' id='sortedIdsStr' />
	  </fieldset>
	</form>
</div>
<button id="generate" class="btn" onclick="$('#sortedIdsStr').val($('#sortable').sortable('toArray').toString());$('#arrange-form').submit();">generate</button>
