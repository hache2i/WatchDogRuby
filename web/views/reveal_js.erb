<!doctype html>
<html lang="en">

	<head>
		<meta charset="utf-8">

		<title>reveal.js - The HTML Presentation Framework</title>

		<meta name="description" content="A framework for easily creating beautiful presentations using HTML">
		<meta name="author" content="Hakim El Hattab">

		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<link rel="stylesheet" href="../css/bootstrap.css" id="bootstrap-theme">
		<link rel="stylesheet" href="../css/reveal.min.css">
		<link rel="stylesheet" href="../css/theme/default.css" id="reveal-theme">
		<link rel="stylesheet" href="../css/styles.css" id="reveal-theme">

		<!--[if lt IE 9]>
		<script src="lib/js/html5shiv.js"></script>
		<![endif]-->
	</head>

	<body>
		<div class="navbar navbar-fixed-top">
  		<div class="navbar-inner">
    		<a class="brand" href="/">
    			<img src='img/notes2reveallogo.png' class='logo' alt='notes to reveal.js logo'/>
    		</a>
    		<form class="navbar-form pull-right form-inline" id="theme-select">
    			<label>select reveal theme</label>
  				<select>
  					<option>default</option>
  					<option>sky</option>
  					<option>beige</option>
  					<option>simple</option>
  					<option>serif</option>
  					<option>night</option>
  					<option>moon</option>
  					<option>solarized</option>
  				</select>
			</form>
  		</div>
  	</div>

		<div class="reveal">
			<div class="slides">
				<%= yield %>
			</div>
		</div>

	  <script>
	  	window.onload = function(){
			$('audio').each(function(){
				$(this).attr('controls', 'controls');
				$(this).attr('data-autoplay', true);
				$(this).attr('width', '100%');
				$(this).attr('heigth', '100%');
			});

			$('.slides table').each(function(){
				$(this).addClass('n2e-table');
			});

			$('.slides a').each(function(){
				$(this).attr('target', '_blank');
			});

			var changeTheme = function() {
				var newtheme = '../css/theme/' + $(this).val() + '.css'
				$('#reveal-theme').attr('href', newtheme);
				$('#theme-select').blur();
			};

			$('#theme-select').bind('change', changeTheme);

			correctTitlesOverflow();
			correctContentsOverflow();
	  	};
	  </script>

		<script src="../js/vendor/reveal.min.js"></script>
		<script src="../js/vendor/jquery-1.8.2.min.js"></script>
		<script src="../js/overflow.js"></script>

		<script>
			Reveal.addEventListener( 'slidechanged', function( event ) {
				correctTitlesOverflow();
				correctContentsOverflow();
			} );

			// Full list of configuration options available here:
			// https://github.com/hakimel/reveal.js#configuration
			Reveal.initialize({
				controls: true,
				progress: true,
				history: true,
				center: true,

				theme: Reveal.getQueryHash().theme, // available themes are in /css/theme
				transition: Reveal.getQueryHash().transition || 'default', // default/cube/page/concave/zoom/linear/fade/none

			});

		</script>

	</body>
</html>
