<% if !@message.empty? %>
	<div class="alert">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong><%= @message %></strong>
	</div>
<% end %>

<fieldset>
  <a id="submit" class="btn arrange" href="/users">
    <div id="imgBtnDiv" width="15px" height="15px"><img src='img/users.png' alt='Arrange' id="submitImg"/></div>
    <label>Domain Users</label>
  </a>
  <div id="loading"></div>
</fieldset>

<script>
  window.onload = function(){
    $("#submit").bind('click', function(event){
      $('#submitImg').css('visibility', 'hidden');
      $('#imgBtnDiv').spin(APP.spinOpts);
    });

  };
</script>
