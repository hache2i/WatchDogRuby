<div class="page-header">
	<h1>Activar Dominio</h1>
</div>
<form action="/admin/activateDomain" method="post" id="add-domain-form">
	<fieldset>
        <label>Google Apps Domain</label>
        <div class="input-append">
          <input type="text" placeholder="Insert the name of the Google Apps Domain" id="domain" name="domain"/>
        </div>
		<label>Domain Docs Admin</label>
	    <div class="input-append">
	      <input type="text" placeholder="Insert the domain docs admin user" id="docs_admin" name="docs_admin"/>
	    </div>
		<label>Number of users</label>
	    <div class="input-append">
	      <input type="text"  class="small-number" placeholder="Licenses" id="licenses" name="licenses"/>
	      <button id="add-domain" class="btn arrange" alt="Add">
	        <div id="imgBtnDiv" width="15px" height="15px">
	        	<img src='img/go.png' alt='Arrange' id="submitImg"/>
	        </div>
	      </button>
	    </div>
	</fieldset>
</form>
  <script>
  	window.onload = function(){
  		$("#add-domain").click(function(){
			$('#submitImg').css('visibility', 'hidden');
			$('#imgBtnDiv').spin(APP.spinOpts);
  		});
  	};
  </script>

